<Window x:Class="UI_Layer.SavePDF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Layer"
        mc:Ignorable="d"
        Title="SavePDF" Height="200" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Barcode save location" />
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="pdf_path" VerticalAlignment="Top" Margin="0,7,10,0" />
        <Button Grid.Column="1" Grid.Row="0" VerticalAlignment="Top"  Height="18" Margin="120,41,10,0" Click="SelectBtn_Click" >Browse...</Button>
        <Button Grid.Column="1" Grid.Row="0" VerticalAlignment="Top"  Height="18" Margin="45,41,85,0" Click="SaveBtn_Click">Save</Button>

    </Grid>
</Window>

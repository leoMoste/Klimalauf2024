<Window x:Class="UI_Layer.BarcodeSession"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Layer"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="submiter" HorizontalAlignment="Left" Margin="507,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="257" IsEnabled="False" KeyUp="submiter_KeyUp"  />
        <ComboBox x:Name="formatbox" HorizontalAlignment="Left" Margin="507,43,0,0" VerticalAlignment="Top" Width="257" SelectionChanged="formatbox_SelectionChanged"/>
        <ListBox x:Name="logger" Margin="0,0,306,0"/>
        <!-- New Label to display warnings -->
        <Label x:Name="warningLabel" Content="" Foreground="Red" HorizontalAlignment="Left" Margin="499,240,0,0" VerticalAlignment="Top" Width="291" Height="103"/>
        <Label Content="Barcode eingeben" HorizontalAlignment="Left" Margin="507,99,0,0" VerticalAlignment="Top" Width="257"/>
        <Label Content="Bitte Codeformat auswählen" HorizontalAlignment="Left" Margin="507,17,0,0" VerticalAlignment="Top" Width="257" Height="26"/>
    </Grid>
</Window>
